{

  "manifest_version": 2,
  "name": "PoppyHex",
  "version": "1.0",

  "description": "Temp descrip",

  "permissions": [
    "storage",
    "tabs"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./src/popup/PoppyHex.js"],
      "run_at": "document_end"
    }
  ],

  "browser_action": {
    "default_title": "PoppyHex",
    "default_popup": "./src/menu/menu.html"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "poppyhex@example.com"
    }
  }

}
